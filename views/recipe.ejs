<%- include('partials/header') -%>

<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto flex flex-wrap">
    <div class="lg:w-1/2 w-full mb-10 lg:mb-0 rounded-lg overflow-hidden">
      <img alt="feature" class="object-cover object-center h-full w-full" src="<%= recipe.image%>">
    </div>
    <div class="flex flex-col flex-wrap lg:py-6 -mb-10 lg:w-1/2 lg:pl-12 lg:text-left text-center">
      <div class="flex flex-col mb-10 lg:items-start items-center">
        <div class="flex-grow">
            <h1 class="text-2xl font-semibold tracking-tight text-gray-500 sm:text-4xl dark:text-white mt-1.5"><%= recipe.name %></h1>
            <h2 class="pt-7 text-white text-lg title-font font-medium mb-3">Ingredients</h2>
            <li class="list-disc text-white w-5/6">
              <%= recipe.ingredients %>
            </li>
            <h2 class="pt-7 text-white text-lg title-font font-medium mb-3">Directions</h2>
            <p class="text-white w-5/6"><%= recipe.ingredients %></p>
          <div class="col-3 mt-5">
            <p><%= recipe.directions %></p>
          </div>
          <div class="text-white flex justify-start justify-between">
            <form
              class="col-1"
              action="/recipe/likeRecipe/<%= recipe.id %>?_method=PUT"
              method="POST">
              <button class=" fa fa-heart" type="submit"></button>
            </form>
            <form
              class="col-1"
              action="/recipe/favoriteRecipe/<%= recipe.id %>" method="POST">
              <button class="fa fa-star" type="submit"></button>
            </form>
            <%if(recipe.user == user.id){ %>
              <form
                action="/recipe/deleteRecipe/<%= recipe.id %>?_method=DELETE"
                method="POST"
                class="col-3">
                <button class="fa fa-trash" type="submit"></button>
              </form>
              <%}%>
            <h3 class="col-3">Likes: <%= recipe.likes %></h3>       
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




<%- include('partials/footer') -%>
